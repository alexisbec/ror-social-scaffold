<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="nav-bar">
      <%= link_to root_path do %>
        <%= image_tag "logo.png", class: "logo" %>
      <% end %>
      <div class="nav-menu">
        <div class="menu-item">
          <%= menu_link_to 'Timeline', posts_path %>
        </div>
        <div class="menu-item">
          <%= menu_link_to 'All users', users_path %>
        </div>
        <div class="menu-item">
          <%= menu_link_to 'Friendship Requests', friendships_path %>
        </div>
      </div>
      <div class="nav-user-menu">
        <%= link_to(current_user.name, user_path(current_user.id)) if current_user %>
        <% if current_user %>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Sign in', user_session_path %>
        <% end %>
      </div>
    </nav>
    <% flash.each do |type, msg| %>
      <div class="alert alert-info">
        <%= msg %>
      </div>
    <% end %>
<%
=begin
%>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if flash[:error].present? %>
      <div class="alert">
        <p> <%= flash[:error] %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
<%
=end
%>
    <main class="main">
      <%= yield %>
    </main>

  <script src="https://kit.fontawesome.com/2f23168c29.js" crossorigin="anonymous"></script>
  </body>
</html>
